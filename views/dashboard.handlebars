<div id="user-posts-container">
    {{#each userPosts as |userPost|}}
    <div class="post">
        <h4>{{userPost.dataValues.title}}</h4>
        <p>{{format_date userPost.dataValues.createdAt}}</p>
    </div>
    {{/each}}
</div>


<!-- New Post Form (Initially Hidden) -->
<section id="new-post-form" style="visibility: hidden;">
    <h4>Create New Post</h4>
    <form id="post-form">
        <label for="title">Title</label>
        <input type="text" id="title" name="title" required>
        <label for="content">Content</label>
        <textarea id="content" name="content" rows="4" required></textarea>
        <button type="submit">Create</button>
    </form>
</section>

<div id="new-post-container">
    <button id="new-post">+ New Post</button>
</div>
<script src="/js/dashboard.js"></script>